# EditorConfig - consistent coding styles across editors
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# R files
[*.R]
indent_size = 2
max_line_length = 120

# Shell scripts
[*.sh]
indent_size = 4
shell_variant = bash

# Windows batch files (keep CRLF)
[*.bat]
end_of_line = crlf

# Markdown (allow trailing whitespace for line breaks)
[*.md]
trim_trailing_whitespace = false

# YAML
[*.{yaml,yml}]
indent_size = 2

# JSON
[*.json]
indent_size = 2

# Makefiles require tabs
[Makefile]
indent_style = tab

# CSV/TSV data files
[*.{csv,tsv}]
insert_final_newline = false
trim_trailing_whitespace = false
